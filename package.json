{
  "name": "nodejs-typescript-base",
  "version": "0.0.0",
  "description": "NodeJS with TypeScript base proyect",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --watchAll=false --reporters=default --reporters=jest-junit --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "author": "Carlos Martinez Gonzalez",
  "engines": {
    "node": ">= 18.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "outputDirectory": ".",
    "outputName": "junit.xml"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^20.3.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "jest": "^29.6.0",
    "jest-junit": "^16.0.0",
    "mock-fs": "^5.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
